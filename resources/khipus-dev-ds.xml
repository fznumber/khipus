        <xa-datasource-property name="URL">jdbc:oracle:thin:@181.177.142.74:1521:orcl</xa-datasource-property>
        <xa-datasource-property name="User">sis</xa-datasource-property>
        <xa-datasource-property name="Password">sis.pwd</xa-datasource-property>
